<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    android:padding="16dp"
    tools:context=".ui.questions.ConditionsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skin Beauty AI will process your personal data to provide you with an analysis and recommendation. The selfie you upload for SkinBeauty AI will be deleted after the analysis, and any retained information will be used according to this Notice. If I choose to receive my results, I understand that SkinBeauty AI will store certain limited information from my selfie analysis."
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I consent to the scanning of my face and the processing of my image as described in the SkinBeauty AI Information Notice and agree to all its terms, including data retention, deletion, and usage."
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I confirm that I have reviewed the SkinBeauty AI Terms of Use, agree to all the terms stated therein, and I am 18 years or older."
                android:textColor="#fff"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/checkbox_conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I have read and understand the terms and conditions."
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/chip_stroke_dark"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:textColor="#fff"
        android:backgroundTint="#555"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:enabled="false" />

</androidx.constraintlayout.widget.ConstraintLayout>
