<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    tools:context=".ui.tips.WrinklesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrinkles"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wrinkles are caused by genetic aging and harmful environmental influences. They result from the skin's diminished ability to regenerate and produce essential structural molecules like collagen and elastin."
            android:textColor="#ffffff"
            android:layout_marginTop="8dp" />

        <!-- Tips -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Maintain a balanced diet rich in antioxidants, essential fatty acids, and trace elements\n• Embrace a healthy lifestyle with regular exercise and adequate sleep\n• Avoid smoking\n• Use suitable sun protection"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp" />

        <!-- Recommended Products -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recommended Products"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- Product 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/retinol_cream" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Retinol Cream: Enhances skin cell regeneration and collagen production, reducing the depth of wrinkles and improving skin elasticity"
                android:textColor="#ffffff"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Product 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/vitamin_c_serum" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Vitamin C Serum: Rich in antioxidants, protects the skin from environmental damage, boosts collagen synthesis, and reduces wrinkles"
                android:textColor="#ffffff"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#000000"
            android:backgroundTint="#D3D3D3"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
