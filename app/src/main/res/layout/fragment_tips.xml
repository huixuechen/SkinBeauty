<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#222"
    android:gravity="center_horizontal|center_vertical">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#444"/>

    <Button
        android:id="@+id/button_dry_skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dry Skin"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_fine_lines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fine Lines"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_firmness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Firmness"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_pigmentation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pigmentation"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_radiance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Radiance"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_under_eye_bags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Under Eye Bags"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_wrinkles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wrinkles"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#D3D3D3"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp" />

</LinearLayout>
